<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
         {% endblock %}
    </head>
    <body>
        <div class="coll-sm-11">
            <h1>HealthOne</h1><span class="text-danger">Today</span>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav mr-auto">
                    <li class="nav-item ">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    {% if is_granted('ROLE_Medewerker')%}
                    <li class="nav-item">
                        <a class="nav-link" href="/medicijnen">Medicijnen</a>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_Apotheker') %}
                    <li class="nav-item">
                        <a class="nav-link" href="/recepten">Recepten</a>
                    </li>
                      {% elseif is_granted('ROLE_Arts') %}
                          <li class="nav-item">
                              <a class="nav-link" href="/recepten">Recepten</a>
                          </li>
                    {% endif %}
                    {% if is_granted('ROLE_Medewerker')  %}
                    <li class="nav-item">
                        <a class="nav-link" href="/patienten">Patienten</a>
                    </li>
                        {% elseif is_granted('ROLE_Arts') %}
                            <li class="nav-item">
                                <a class="nav-link" href="/patienten">Patienten</a>
                            </li>

                    {% endif %}

                    <li class="nav-item">
                        <a class="nav-link" href="/">Contact</a>
                    </li>
                </ul>


                {% if app.user %}
                    <div class="mb-3">
                             <a class="text-dark" href="{{ path('app_logout') }}">Logout</a>
                    </div>

                   {% else%}
                <a class="nav-link text-secondary" href="/login">Inloggen</a>
                {% endif %}
            </div>
        </nav>


        {% block content_body %}{% endblock %}


        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        {% endblock %}

    </body>
</html>


